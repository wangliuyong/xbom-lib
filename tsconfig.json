{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "xbom-lib": ["packages/components"],
      "xbom-lib/*": ["packages/components/*"]
    },
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/page/HelloPage.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
